<%= form_with(model: registry) do |form| %>
  <% if registry.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(registry.errors.count, "error") %> prohibited this registry from being saved:</h2>

      <ul>
        <% registry.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :location, style: "display: block" %>
    <%= form.text_area :location %>
  </div>

  <div>
    <%= form.label :state, style: "display: block" %>
    <%= form.select :state, Registry.states.keys %>
  </div>

  <div>
      <%= form.label :coordinators %>
      <%= form.select :coordinator_ids, Coordinator.all.collect { |c| [ c.email, c.id ] },{},{ multiple: true} %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
